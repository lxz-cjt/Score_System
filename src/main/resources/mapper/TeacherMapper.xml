<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.example.score_system1.mapper.TeacherMapper">

    <!-- 插入教师信息 -->
    <insert id="insertTeacher" parameterType="com.example.score_system1.entity.Teacher" useGeneratedKeys="true" keyProperty="teId">
        INSERT INTO Teacher (Te_name, Te_major)
        VALUES (#{teName}, #{teMajor})
    </insert>

    <!-- 根据教师 ID 查询教师信息 -->
    <select id="selectTeacherById" parameterType="String" resultType="com.example.score_system1.entity.Teacher">
        SELECT * FROM Teacher WHERE Te_id = #{teId}
    </select>

    <!-- 更新教师信息 -->
    <update id="updateTeacher" parameterType="com.example.score_system1.entity.Teacher">
        UPDATE Teacher
        SET Te_name = #{teName}, Te_major = #{teMajor}
        WHERE Te_id = #{teId}
    </update>

    <!-- 删除教师信息 -->
    <delete id="deleteTeacher" parameterType="String">
        DELETE FROM Teacher WHERE Te_id = #{teId}
    </delete>

    <!-- 分页查询所有教师信息 -->
    <select id="selectAllTeachers" parameterType="map" resultType="com.example.score_system1.entity.Teacher">
        SELECT * FROM Teacher
        ORDER BY Te_id
    </select>

</mapper>