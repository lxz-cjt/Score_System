<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.example.score_system1.mapper.AcademicAffairsStaffMapper">

    <!-- 插入教务人员信息 -->
    <insert id="insertAcademicAffairsStaff" parameterType="com.example.score_system1.entity.AcademicAffairsStaff" useGeneratedKeys="true" keyProperty="aasId">
        INSERT INTO Academic_affairs_staff (Aas_name)
        VALUES (#{aasName})
    </insert>

    <!-- 根据教务人员 ID 查询教务人员信息 -->
    <select id="selectAcademicAffairsStaffById" parameterType="String" resultType="com.example.score_system1.entity.AcademicAffairsStaff">
        SELECT * FROM Academic_affairs_staff WHERE Aas_id = #{aasId}
    </select>

    <!-- 查询所有教务人员信息 -->
    <select id="selectAllAcademicAffairsStaffs" resultType="com.example.score_system1.entity.AcademicAffairsStaff">
        SELECT * FROM Academic_affairs_staff
    </select>

    <!-- 更新教务人员信息 -->
    <update id="updateAcademicAffairsStaff" parameterType="com.example.score_system1.entity.AcademicAffairsStaff">
        UPDATE Academic_affairs_staff
        SET Aas_name = #{aasName}
        WHERE Aas_id = #{aasId}
    </update>

    <!-- 删除教务人员信息 -->
    <delete id="deleteAcademicAffairsStaff" parameterType="String">
        DELETE FROM Academic_affairs_staff WHERE Aas_id = #{aasId}
    </delete>

</mapper>