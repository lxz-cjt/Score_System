<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.example.score_system1.mapper.CourseMapper">

    <!-- 插入课程信息 -->
    <insert id="insertCourse" parameterType="com.example.score_system1.entity.Course" useGeneratedKeys="true" keyProperty="cId">
        INSERT INTO Course (C_name, C_credit)
        VALUES (#{cName}, #{cCredit})
    </insert>

    <!-- 根据课程 ID 查询课程信息 -->
    <select id="selectCourseById" parameterType="String" resultType="com.example.score_system1.entity.Course">
        SELECT * FROM Course WHERE C_id = #{cId}
    </select>

    <!-- 更新课程信息 -->
    <update id="updateCourse" parameterType="com.example.score_system1.entity.Course">
        UPDATE Course
        SET C_name = #{cName}, C_credit = #{cCredit}
        WHERE C_id = #{cId}
    </update>

    <!-- 删除课程信息 -->
    <delete id="deleteCourse" parameterType="String">
        DELETE FROM Course WHERE C_id = #{cId}
    </delete>

    <!-- 分页查询所有课程信息 -->
    <select id="selectAllCourses" parameterType="map" resultType="com.example.score_system1.entity.Course">
        SELECT * FROM Course
        ORDER BY C_id
    </select>

</mapper>