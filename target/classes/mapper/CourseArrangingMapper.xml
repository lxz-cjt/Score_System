<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.example.score_system1.mapper.CourseArrangingMapper">

    <!-- 插入课程安排信息 -->
    <insert id="insertCourseArranging" parameterType="com.example.score_system1.entity.CourseArranging" useGeneratedKeys="true" keyProperty="caId">
        INSERT INTO Course_arranging (C_id, Te_id)
        VALUES (#{cId}, #{teId})
    </insert>

    <!-- 根据课程安排 ID 查询课程安排信息 -->
    <select id="selectCourseArrangingById" parameterType="String" resultType="com.example.score_system1.entity.CourseArranging">
        SELECT * FROM Course_arranging WHERE Ca_id = #{caId}
    </select>

    <!-- 根据课程 ID 查询课程安排信息 -->
    <select id="selectCourseArrangingsByCourseId" parameterType="String" resultType="com.example.score_system1.entity.CourseArranging">
        SELECT * FROM Course_arranging WHERE C_id = #{cId}
    </select>

    <!-- 根据教师 ID 查询课程安排信息 -->
    <select id="selectCourseArrangingsByTeacherId" parameterType="String" resultType="com.example.score_system1.entity.CourseArranging">
        SELECT * FROM Course_arranging WHERE Te_id = #{teId}
    </select>

    <!-- 更新课程安排信息 -->
    <update id="updateCourseArranging" parameterType="com.example.score_system1.entity.CourseArranging">
        UPDATE Course_arranging
        SET C_id = #{cId}, Te_id = #{teId}
        WHERE Ca_id = #{caId}
    </update>

    <!-- 删除课程安排信息 -->
    <delete id="deleteCourseArranging" parameterType="String">
        DELETE FROM Course_arranging WHERE Ca_id = #{caId}
    </delete>

    <!-- 分页查询所有课程安排信息 -->
    <select id="selectAllCourseArrangings" parameterType="map" resultType="com.example.score_system1.entity.CourseArranging">
        SELECT * FROM Course_arranging
        ORDER BY Ca_id
    </select>

</mapper>